{
  "name": "流量录制",
  "version": "1.0",
  "description": "录制请求，发送至自动化漏洞扫描平台",
  "author": "snowsec0",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action":
  {
    "default_icon": "icon.png",
    "default_title": "流量录制",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "storage",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "manifest_version": 2
}